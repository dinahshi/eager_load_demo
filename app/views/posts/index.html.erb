<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<% @posts.each do |post| %>
  <% cache post do %>
    <p>
      <strong>Name:</strong>
      <%= post.name %>
    </p>

    <p>
      <strong>Title:</strong>
      <%= post.title %>
    </p>

    <p>
      <strong>Body:</strong>
      <%= post.body %>
    </p>

    <h2>Comments:</h2>
    <%= render post.comments %>
  <% end %>
<% end %>

<%= link_to 'New Post', new_post_path %>
